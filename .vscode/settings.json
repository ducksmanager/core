{
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.turbo/**": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "sqltools.connections": [
    {
      "mysqlOptions": {
        "authProtocol": "default"
      },
      "previewLimit": 50,
      "server": "127.0.0.1",
      "port": 64999,
      "driver": "MariaDB",
      "name": "local",
      "database": "dm",
      "username": "root",
      "password": "changeme"
    }
  ],
  "i18n-ally.localesPaths": [
    "translations",
    "apps/duckguessr/locales",
    "apps/duckguessr-old/locales",
    "apps/edgecreator/locales"
  ],
  "eslint.format.enable": true,
  "editor.formatOnSave": true
}
