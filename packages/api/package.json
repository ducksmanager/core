{
  "name": "~api",
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "version": "1.0.0",
  "scripts": {
    "build": "bun build --target node --sourcemap index.ts --outfile bundle.mjs",
    "dev": "concurrently -n api,docker-compose,db \"pnpm -F ~api nodemon-watch\" \"docker compose -f docker-compose-dev.yml up pastec mailcatcher\" \"pnpm -F ~prisma-clients dev\"",
    "nodemon-watch": "concurrently -n nodemon,tsc \"bun --inspect run --hot index.ts\" \"tsc --noEmit --watch\"",
    "lint": "eslint --fix .",
    "wait": "wait-on tcp:3000"
  },
  "dependencies": {
    "@pusher/push-notifications-server": "^1.2.6",
    "@sentry/node": "^7.118.0",
    "@socket.io/admin-ui": "^0.5.1",
    "axios": "^1.7.2",
    "cloudinary": "^1.41.3",
    "csv-parse": "^5.5.6",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.14",
    "socket.io": "^4.7.5",
    "~dm-types": "workspace:*",
    "~prisma-clients": "workspace:*",
    "~socket.io-services": "workspace:*"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/i18n": "^0.13.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^18.19.41",
    "@types/nodemailer": "^6.4.15",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "wait-on": "^7.2.0"
  }
}