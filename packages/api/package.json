{
  "name": "~api",
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && find routes -name '*.ts' -type f | while read routeFile; do echo $routeFile; bun build --target node $routeFile --outfile ./dist/$(echo $routeFile | sed 's/\\.ts/.js/g'); done; bun build --target node index.ts --outfile bundle.mjs",
    "dev": "concurrently -n api,docker-compose,db \"pnpm -F ~api nodemon-watch\" \"docker compose -f docker-compose-dev.yml up pastec mailcatcher\" \"pnpm -F ~prisma-schemas dev\"",
    "nodemon-watch": "concurrently -n nodemon,tsc \"bun --inspect run --hot index.ts\" \"tsc --noEmit --watch\"",
    "prod:deploy": "DIR=packages/api SERVICES=api pnpm -F '~ci' prod:docker-compose-up",
    "prod:docker-compose-run-create-issues-from-subscriptions": "DIR=packages/api COMMAND=\"exec api-websocket node ./create-issues-from-subscriptions.mjs\" pnpm -F '~ci' prod:docker-compose-command",
    "prod:build-docker": "REPO_NAME=ghcr.io/bperel/ducksmanager-api pnpm -F '~ci' prod:build-docker -f packages/api/Dockerfile",
    "prod:transfer-files-pre": "pnpm -F '~ci' prod:transfer-files @packages/api/.env:packages/api/.env @packages/prisma-schemas/.env:packages/prisma-schemas/.env",
    "prod:transfer-files-post": "pnpm -F '~ci' prod:transfer-files packages/api/docker-compose.yml:@packages/api/docker-compose.yml",
    "lint": "eslint --fix .",
    "wait": "wait-on tcp:3000"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "@pusher/push-notifications-server": "^1.2.6",
    "@sentry/node": "^7.119.1",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cloudinary": "^1.41.3",
    "connect-busboy": "^1.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "csv-parse": "^5.5.6",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "express-file-routing": "^3.0.3",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.3.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.15",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "~dm-types": "workspace:*",
    "~prisma-schemas": "workspace:*"
  },
  "devDependencies": {
    "@swc/core": "1.3.82",
    "@types/body-parser": "^1.19.5",
    "@types/busboy": "^1.5.4",
    "@types/connect-busboy": "^1.0.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.12",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^16.18.112",
    "@types/nodemailer": "^6.4.16",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier-vue": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "prisma": "^6.7.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.2",
    "wait-on": "^8.0.1"
  }
}