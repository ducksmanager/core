{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "noEmit": true,
    "outDir": "dist",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true,
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~locales/*": [
        "locales/*"
      ],
      "~dm-services/*": [
        "../../packages/api/services/*"
      ],
      "~web/*": [
        "../web/*"
      ],
      "~dm-types/*": [
        "../../packages/types/*"
      ],
      "~duckguessr-prisma-client": [
        "api/prisma/client_duckguessr"
      ],
      "~duckguessr-types/*": [
        "api/types/*"
      ],
      "~prisma-schemas/*": [
        "../../packages/prisma-schemas/*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": [
      "codeceptjs",
      "vite/client",
      "vite-plugin-pages/client",
      "unplugin-icons/types/vue"
    ],
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}