{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "noEmit": true,
    "outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "preserveWatchOutput": true,
    "paths": {
      "~/*": ["src/*"],
      "~locales/*": ["locales/*"],
      "~dm-services/*": ["../../packages/api/services/*"],
      "~dm-types/*": ["../../packages/types/*"],
      "~duckguessr-prisma-client": ["api/prisma/client_duckguessr"],
      "~duckguessr-types/*": ["api/types/*"],
      "~prisma-clients/*": ["../../packages/prisma-clients/*"],
      "~socket.io-client-services/*": [
        "../../packages/socket.io-client-services/*"
      ],
      "~socket.io-services/*": ["../../packages/socket.io-services/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": [
      "codeceptjs",
      "vite/client",
      "vite-plugin-pages/client",
      "unplugin-icons/types/vue"
    ],
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
