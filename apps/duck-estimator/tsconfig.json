{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2022",
    "target": "esnext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "paths": {
      "~/*": [
        "*"
      ],
      "~prisma-schemas/*": [
        "../../packages/prisma-schemas/*"
      ],
    }
  },
  "include": [
    "*.ts",
    "scrapes/**/*.ts"
  ]
}