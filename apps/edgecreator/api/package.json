{
  "name": "~edgecreator-api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && find routes -name '*.ts' -type f | while read routeFile; do echo $routeFile; bun build --target node $routeFile --outfile ./dist/$(echo $routeFile | sed 's/\\.ts/.js/g'); done; bun build --target node --sourcemap index.ts --outfile bundle.mjs",
    "dev": "pnpm generate-route-types:clean && concurrently -n bun,tsc \"bun --inspect run --hot index.ts\" \"tsc --noEmit --watch\"",
    "generate-route-types:clean": "bun generate-route-types.ts",
    "prod:deploy": "DIR=apps/edgecreator/api pnpm -F '~ci' prod:docker-compose-up",
    "prod:build-docker": "REPO_NAME=ghcr.io/bperel/edgecreator-api pnpm -F '~ci' prod:build-docker -f apps/edgecreator/api/Dockerfile",
    "prod:transfer-files-pre": "pnpm -F '~ci' prod:transfer-files @apps/edgecreator/api/.env:apps/edgecreator/api/.env @packages/prisma-schemas/.env.prod.local:packages/prisma-schemas/.env",
    "prod:transfer-files-post": "pnpm -F '~ci' prod:transfer-files apps/edgecreator/api/docker-compose.yml:@apps/edgecreator/api/docker-compose.yml"
  },
  "dependencies": {
    "@sentry/node": "^7.114.0",
    "@vueuse/integrations": "^10.9.0",
    "axios": "^1.6.8",
    "body-parser": "^1.20.2",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ducksmanager": "^0.0.51",
    "express": "^4.19.2",
    "express-file-routing": "^3.0.3",
    "i18n": "^0.15.1",
    "image-size": "^1.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.1",
    "node-base64-image": "^2.0.6",
    "nodemon": "^2.0.22",
    "universal-cookie": "^4.0.4",
    "~api-routes": "workspace:*",
    "~dm-types": "workspace:*",
    "~prisma-schemas": "workspace:*"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/busboy": "^1.5.4",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^18.19.33",
    "concurrently": "^9.0.1",
    "tsc-alias": "^1.8.9",
    "tsx": "^4.10.1",
    "typescript": "^5.4.5"
  }
}