{
  "name": "~edgecreator-api",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "bun build --target node index.ts --outfile bundle.mjs",
    "dev": "tsc --noEmit --watch",
    "lint": "eslint --fix .",
    "prod:run:sprite-names-updater": "DIR=apps/edgecreator/api SERVICE=sprite-names-updater pnpm -F '~ci' prod:docker-compose-run",
    "prod:deploy": "SERVICES=api-websocket DIR=apps/edgecreator/api pnpm -F '~ci' prod:docker-compose-up",
    "prod:build-docker": "REPO_NAME=ghcr.io/bperel/edgecreator-api:websocket pnpm -F '~ci' prod:build-docker -f apps/edgecreator/api/Dockerfile",
    "prod:transfer-files-pre": "pnpm -F '~ci' prod:transfer-files @apps/edgecreator/api/.env:apps/edgecreator/api/.env @packages/prisma-schemas/.env:packages/prisma-schemas/.env",
    "prod:transfer-files-post": "pnpm -F '~ci' prod:transfer-files apps/edgecreator/api/docker-compose.yml:@apps/edgecreator/api/docker-compose.yml apps/edgecreator/api/Caddyfile:@apps/edgecreator/api/Caddyfile"
  },
  "dependencies": {
    "@sentry/node": "^9.11.0",
    "@socket.io/admin-ui": "^0.5.1",
    "@vueuse/integrations": "^12.8.2",
    "axios": "^1.8.4",
    "cloudinary": "^1.41.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "fast-xml-parser": "^4.5.3",
    "i18n": "^0.15.1",
    "image-size": "^1.2.1",
    "jsdom": "^24.1.3",
    "jsonwebtoken": "^9.0.2",
    "node-base64-image": "^2.0.7",
    "socket-call-client": "^0.6.0",
    "socket-call-server": "^0.5.3",
    "socket.io": "^4.8.1",
    "universal-cookie": "^4.0.4",
    "~api": "workspace:*",
    "~dm-types": "workspace:*",
    "~prisma-schemas": "workspace:*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.12",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.14.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  }
}