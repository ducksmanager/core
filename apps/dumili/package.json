{
  "name": "~dumili",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "scripts": {
    "dumili": "concurrently -p \"[dumili-{name}]\" --kill-others-on-fail -n front,api,dm,kumiko+paddleocr \"pnpm -F ~dumili dev\" \"pnpm -F ~dumili-api dev\" \"pnpm -F ~web web\" \"docker compose -f docker-compose-dev.yml up kumiko db\"",
    "dev": "concurrently -n vite,vue-tsc \"vite --port 8004\" \"vue-tsc --noEmit --watch\"",
    "build": "vite build && pnpm sentry:sourcemaps",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint --fix .",
    "prod:deploy": "DIR=apps/dumili pnpm -F '~ci' prod:docker-compose-up",
    "prod:build-docker-web": "REPO_NAME=ghcr.io/bperel/dumili-app pnpm -F '~ci' prod:build-docker -f apps/dumili/Dockerfile",
    "prod:build-docker": "pnpm run '/^prod:build-docker-/'",
    "prod:transfer-files-pre": "pnpm -F '~ci' prod:transfer-files @apps/dumili/.env:apps/dumili/.env",
    "prod:transfer-files-post": "pnpm -F '~ci' prod:transfer-files apps/dumili/docker-compose.yml:@apps/dumili/docker-compose.yml apps/dumili/Caddyfile:@apps/dumili/Caddyfile",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org bruno-perel --project dumili ./dist && sentry-cli sourcemaps upload --org bruno-perel --project dumili ./dist"
  },
  "dependencies": {
    "@iconify-json/bi": "^1.2.4",
    "@sentry/browser": "^9.19.0",
    "@sentry/vue": "^9.19.0",
    "@unhead/vue": "^1.11.20",
    "@vueuse/components": "^12.8.2",
    "@vueuse/core": "^12.8.2",
    "@vueuse/integrations": "^12.8.2",
    "bootstrap": "^5.3.6",
    "bootstrap-vue-next": "^0.26.30",
    "js-cookie": "^3.0.5",
    "pinia": "^3.0.2",
    "socket-call-client": "^0.7.1",
    "sortablejs": "^1.15.6",
    "vue": "^3.5.14",
    "vue-draggable-resizable": "^3.0.0",
    "vue-i18n": "^9.14.4",
    "vue-router": "^4.5.1",
    "~group-by": "workspace:*",
    "~web": "workspace:*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@intlify/eslint-plugin-vue-i18n": "^4.0.1",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@sentry/cli": "^2.45.0",
    "@types/js-cookie": "^3.0.6",
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-prettier-vue": "^5.0.0",
    "eslint-plugin-vue": "^10.1.0",
    "prettier": "^3.5.3",
    "sass": "^1.88.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-pages": "^0.32.5",
    "vite-plugin-vue-layouts": "^0.11.0",
    "vue-tsc": "^2.2.10"
  }
}