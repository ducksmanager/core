{
    "name": "dumili-browser-extension",
    "version": "1.0.0",
    "description": "Browser extension for Dumili",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "publish": "(cd dist && zip ../extension.zip content.* manifest.json) && cp ../src/components/TextEditor.vue src/components/ && zip -r extension-sources.zip *.json src && rm src/components/TextEditor.vue",
        "watch": "vite build --watch"
    },
    "dependencies": {
        "@vueuse/core": "^13.9.0",
        "jquery": "^3.7.1",
        "vue": "^3.5.25",
        "~dumili": "workspace:*"
    },
    "devDependencies": {
        "@types/chrome": "^0.0.313",
        "@types/jquery": "^3.5.33",
        "@vitejs/plugin-vue": "^6.0.2",
        "sass": "^1.94.2",
        "typescript": "^5.9.3",
        "vite": "^7.2.4",
        "web-ext": "^8.10.0"
    }
}