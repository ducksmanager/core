{
  "name": "~outducks",
  "type": "module",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "scripts": {
    "build": "bun build --external playwright-firefox --external playwright-core --external playwright --target node index.ts --outfile dist/index.js && mv dist/index.js bundle.mjs && rm -rf dist",
    "start": "bun --inspect run --watch index.ts",
    "dev": "PWDEBUG=1 bun --inspect run --watch index.ts",
    "prod:build-docker": "REPO_NAME=ghcr.io/bperel/outducks-sync pnpm -F '~ci' prod:build-docker -f apps/outducks/Dockerfile",
    "prod:docker-compose-run": "DIR=apps/outducks SERVICE=outducks-sync pnpm -F '~ci' prod:docker-compose-run",
    "prod:transfer-files-pre": "pnpm -F '~ci' prod:transfer-files @apps/outducks/.env:apps/outducks/.env",
    "prod:transfer-files-post": "pnpm -F '~ci' prod:transfer-files apps/outducks/docker-compose.yml:@apps/outducks/docker-compose.yml apps/outducks/Caddyfile:@apps/outducks/Caddyfile"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "playwright-firefox": "~1.56.1",
    "~prisma-schemas": "workspace:*"
  },
  "module": "index.ts",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}