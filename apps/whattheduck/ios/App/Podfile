  pod 'SentryCapacitor', :path => '../../../../node_modules/.pnpm/@sentry+capacitor@1.2.0_@capacitor+core@7.0.1_@sentry+vue@9.1.0_pinia@2.3.1_typescript@5.7.3__k6q6unrfsgowd7a6l27pvjvnoe/node_modules/@sentry/capacitor'
