{
    "$schema": "https://turborepo.org/schema.json",
    "extends": [
        "//"
    ],
    "tasks": {
        "dev:android": {
            "persistent": true,
            "dependsOn": [
                "set-android-socket-url",
                "update-android-capacitor-config"
            ],
            "passThroughEnv": [
                "VITE_DM_SOCKET_URL_NATIVE"
            ]
        },
        "set-android-socket-url": {
            "cache": false
        },
        "update-android-capacitor-config": {
            "cache": false
        },
        "dev": {
            "persistent": true,
            "dependsOn": [
                "cap:update"
            ]
        },
        "cap:update": {
            "cache": false
        }
    }
}